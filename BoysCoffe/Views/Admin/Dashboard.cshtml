@model BoysCoffe.Models.AdminDashboardViewModel

@{
    Layout = @"~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Dashboard Styles */
        .main-content {
          
            padding: 30px;
            background-color: #f7faf6;
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        h3 {
            color: #20c579;
            font-family: 'Poppins', sans-serif;
        }

        .dashboard-stats {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            width: 100%;
        }

        /* Stat Box Styles */
        .stat-box {
            padding: 30px;
            text-align: center;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            font-size: 24px;
            height: 180px;
            width: 100%;
            transition: all 0.3s ease;
        }

        .stat-box h3 {
            color: #ffffff;
        }

        .stat-box:hover {
            transform: translateY(-10px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .stat-box.total-sales {
            background-color: #20c579; /* Màu chủ đạo */
        }

        .stat-box.products {
            background-color: #4d92b0; /* Màu xanh dương nhẹ */
        }

        .stat-box.users {
            background-color: #fbbf3f; /* Màu vàng cam */
        }

        /* Table */
        .table {
            width: 100%;
            border-collapse: collapse;
        }

        .table th, .table td {
            padding: 12px;
            text-align: left;
        }

        .table th {
            background-color: #20c579;
            color: #fff;
        }

        .table tr:nth-child(even) {
            background-color: #f1f1f1;
        }

        .table tr:hover {
            background-color: #e1f3e1;
        }

        /* Custom Responsive */
        @@media (max-width: 768px) {
            .dashboard-stats {
                flex-direction: column;
            }

            .stat-box {
                width: 100%;
            }
        }
    </style>
</head>
<body>

    <!-- Main Dashboard Content -->
    <div class="main-content">
        <h3 style=" padding-top: 2rem;">Admin Dashboard</h3>
        <div class="row g-5">
            <div class="col-12 col-md-4">
                <div class="stat-box total-sales">
                    <h3>Total Sales</h3>
                    <p>@Model.TotalSales.ToString("C")</p>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="stat-box products">
                    <h3>Products</h3>
                    <p>@Model.ProductCount</p>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="stat-box users">
                    <h3>Users</h3>
                    <p>@Model.UserCount</p>
                </div>
            </div>

            <div class="dashboard-section mt-5">
                <h3>Recent Orders</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Date</th>
                            <th>Total</th>
                            <th>User</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.RecentOrders)
                        {
                            <tr>
                                <td>@order.OrderId</td>
                                <td>@order.OrderDate.ToShortDateString()</td>
                                <td>@order.TotalPrice.ToString("C")</td>
                                <td>@order.User.Username</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
