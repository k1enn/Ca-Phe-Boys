        <img src="~/Content/images/cam-ket-chat-luong.jpg" />
    </div>

    <!-- Phần Chính sách bảo mật -->
    <div class="section move-in">
        <img src="~/Content/images/Chính sách bảo mật.jpg" height="450" width="500"; />
        <div class="section-content">
            <h3>Chính sách bảo mật</h3>
