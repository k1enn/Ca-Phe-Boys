@model BoysCoffe.Models.Product

@{
    ViewBag.Title = "Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    <div class="container mt-5" style="padding-bottom:100px">
        <div class="row">
            <!-- Phần hình ảnh sản phẩm -->
            <div class="col-md-6" >
                @if (Model.ImageUrl != null)
                {
                    <img src="~/Content/images/@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow-lg" style="width: 400px; height: 400px; background-color: #FAE9D4;" />
                }
                else
                {
                    <div class="placeholder-image rounded shadow-lg" style="width: 600px; height: 600px; background-color: #FAE9D4; display: flex; align-items: center; justify-content: center;">
                        <span class="text-muted">No Image Available</span>
                    </div>
                }
            </div>

            <!-- Phần thông tin sản phẩm -->
            <div class="col-md-6">
                <h2 class="fw-bold">@Model.Name</h2>
                <p class="h4 text-warning">@Model.Price.ToString("C")</p>

                <div class="mt-3 product-description" style="height: 300px; overflow-y: auto;">
                    <h5 class="fw-bold">Mô tả sản phẩm</h5>
                    <p>@Model.Description</p>
                </div>
                <div class="mt-4">
                    <a href="@Url.Action("ShowCart", "Products", new { id = Model.ProductId })" class="btn btn-warning btn-lg me-2">Mua ngay</a>
                    <a href="@Url.Action("AddToCart", "Products", new { id = Model.ProductId })" class="btn btn-outline-secondary btn-lg">Thêm vào giỏ hàng</a>
                </div>
            </div>
        </div>
    </div>
</body>
<style>
    body {
        background-color: #e0f6e6;
        
    }


    .h4.text-warning {
        color: #FF9900;
    }

    .btn-group .btn {
        border-radius: 10px;
        margin-right: 10px;
        font-size: 14px;
    }

    .btn-warning {
        background-color: #FF9900;
        color: white;
        border: none;
    }

    img.img-fluid {
        max-width: 80%;
        margin-bottom: 10px;
    }

    .product-image, .placeholder-image {
        width: 500px;
        height: 500px;
        object-fit: cover; /* Đảm bảo ảnh phủ đầy khung 500x500 */
    }

    .placeholder-image {
        background-color: #FAE9D4;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d; /* Màu chữ cho văn bản "No Image Available" */
        font-size: 1.2rem;
    }

    .product-description {
        height: 300px;
        overflow-y: auto; /* Nếu mô tả quá dài, sẽ có thanh cuộn dọc */
    }

    .button-group {
        margin-top: 20px;
    }
</style>