@{
    ViewBag.Title = "Home Page";
}

<style>
    /*Add background*/
    body {
        min-height: 100vh;
        background: url('@Url.Content("~/Content/images/bg-trans.PNG")');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

/* Main Banner */
.banner-section {
    /*background-color:white;*/
    padding-top: 15vh;
    color: black;
}

.banner-title {
    margin-top: 38vh;
    padding-left: 10%;
    font-size: 5rem;
    font-family: serif;
    font-weight: bold;
    position: relative;
    text-align: left;
    z-index: -1;
}

@@media (max-width: 800px) {
    .banner-title {
        margin-top: auto;
        text-shadow: 2px 2px 4px rgba(255, 255, 255, 0.8);
    }
    .banner-subtitle {
        text-shadow: 2px 2px 4px rgba(255, 255, 255, 0.8);
    }
}

.banner-subtitle {
    padding-left: 10%;
    font-weight: bold;
    font-size: 1.1rem;
    font-family: 'Arial', sans-serif;
    margin-top: 10px;
    text-align: left;
}

.drink-img {
    margin-right: 5rem;
    height: 70vh;
    padding-bottom: 5vh;
}

</style>

<section class="banner-section">
    <div class="container text-center">
        <div class="row">
            <div class="col-md-6">

                <h1 class="banner-title">Boys Coffee</h1>
                <p class="banner-subtitle">Chất lượng làm nên thương hiệu cà phê ngon cho người có gu</p>
                <blockquote>Login ~/Account/Login</blockquote>
            </div>
            <div class="col-md-6">
                <img src="~/Content/images/twocoffee.png" alt="Cafe" class="drink-img" />
            </div>
        </div>
    </div>
</section>