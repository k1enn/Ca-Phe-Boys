<!--js để banner chuyển tự động sau 3s-->
<script>
    let currentIndex = 0;
    const images = document.querySelectorAll('.banner-slider img');
    const totalImages = images.length;

    function changeImage() {
        currentIndex = (currentIndex + 1) % totalImages; // Tính chỉ số ảnh tiếp theo
        const offset = -currentIndex * 100 / totalImages; // Đảm bảo chỉ di chuyển 1 ảnh trong mỗi lần
        document.querySelector('.banner-slider').style.transform = `translateX(${offset}%)`; // Di chuyển ảnh theo chỉ số mới
    }

    setInterval(changeImage, 3000); // Thay ảnh mỗi 3 giây
</script>
