@model CoffeeShopApp.Models.AdminDashboardViewModel

@{
    Layout = @"~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Sidebar Navigation */
        #sidebar {
            width: 250px;
            background-color: #2f6f56;
            color: #ffffff;
            height: 100vh;
            padding: 20px;
            position: fixed;
            top: 0;
            left: -250px; /* Initially hide sidebar on mobile */
            transition: all 0.3s ease;
        }

        /* Show the sidebar when it's active */
        #sidebar.active {
            left: 0; /* Move sidebar into view */
        }

        /* Button to toggle sidebar visibility */
        #sidebar-toggle-btn {
            position: fixed;
            bottom: 20px; /* Place at bottom of the screen */
            left: 20px;  /* Place at the left side of the screen */
            z-index: 1000;
            transition: left 0.3s ease, bottom 0.3s ease;
            background: #000; /* Black background */
            border: none; /* Remove border */
            border-radius: 50%; /* Circular button */
            padding: 10px; /* Add padding to the button */
        }

        /* Image inside the toggle button */
        #sidebar-toggle-btn img {
            width: 40px;  /* Adjust size of the image */
            height: 40px; /* Adjust size of the image */
        }

        /* Button to close sidebar */
        #close-sidebar-btn {
            background: none;
            border: none;
            color: #ffffff;
            font-size: 24px;
            position: absolute;
            top: 20px;
            right: 20px;
        }

        /* For mobile devices */
        @@media (max-width: 768px) {
            #sidebar-toggle-btn {
                display: block; /* Show button only on mobile */
            }

            #sidebar.active {
                left: 0; /* Show sidebar when it's active */
            }

            #page-content-wrapper {
                padding-left: 0;
            }
        }

        /* Always show sidebar on PC */
        @@media (min-width: 769px) {
            #sidebar {
                left: 0; /* Sidebar always visible on larger screens */
            }

            #sidebar-toggle-btn {
                display: none; /* Hide the toggle button on PC */
            }

            #page-content-wrapper {
                padding-left: 250px; /* Ensure content doesn't overlap with the sidebar */
            }
        }
        /* Container */
        .container-fluid {
            display: flex;
            margin-top: 0px; /* Điều chỉnh khoảng cách giữa navbar và content */
            padding-left: 5rem;
        }

        /* Sidebar Navigation */
        .sidebar {
            width: 250px;
            background-color: #2f6f56;
            color: #ffffff;
            height: 100vh;
            padding: 20px;
            position: fixed;
            top: 0;
            left: 0;
            margin-top: 0; /* Đảm bảo sidebar không bị đẩy xuống dưới */
        }

            .sidebar ul {
                list-style: none; /* Removes bullet points */
                padding: 0;
            }

                .sidebar ul li:hover {
                    background-color: #3a8f7c; /* Slightly lighter color on hover */
                    cursor: pointer;
                }

                .sidebar ul li {
                    margin-bottom: 10px; /* Adjusted for 10px spacing between items */
                    background-color: #2f6f56; /* Box background color */
                    padding: 10px;
                    border-radius: 8px;
                    width: 100%;
                    transition: background-color 0.3s, transform 0.1s; /* Smooth transition */
                }

                    .sidebar ul li a {
                        color: #ffffff;
                        text-decoration: none;
                        display: block; /* Make the link cover the entire box */
                        font-size: 18px;
                    }

                        .sidebar ul li a:hover {
                            background-color: #3a8f7c; /* Slightly lighter color on hover */
                            cursor: pointer;
                        }

        /* Main Content */
        .main-content {
            margin-left: 250px; /* Đặt khoảng cách trái bằng chiều rộng của sidebar */
            padding: 20px;
            background-color: #96e9c5;
            display: flex;
            flex-direction: column;
            gap: 20px;
            width: calc(100% - 250px); /* Đảm bảo phần nội dung chiếm hết chiều rộng còn lại */
        }

        .dashboard-stats {
            display: flex;
            justify-content: space-between; /* Distribute the boxes evenly */
            gap: 50px;
            width: 100%; /* Ensure it stretches across the page */
        }

        .stat-box {
            background-color: #f8f9fa;
            padding: 30px;
            text-align: center;
            border-radius: 8px;
            font-size: 30px;
            height: 150px; /* Đảm bảo chiều cao cố định cho các hộp */
            width: 100%;
        }

        /* Table */
        .table {
            width: 100%; /* Đảm bảo bảng chiếm hết chiều rộng của phần tử chứa */
            border-collapse: collapse; /* Loại bỏ khoảng cách giữa các ô trong bảng */
        }

            .table th, .table td {
                padding: 12px; /* Thêm padding cho các ô trong bảng */
                text-align: left; /* Thêm đường viền cho các ô */
            }
        /* Main Content */
        .dashboard-section {
            margin-top: 20px;

            transition: padding-left 0.3s ease;
        }

        body {
            background-color: #96e9c5;
        }
    </style>
</head>
<body>

    <div class="container-fluid">
        <!-- Sidebar Navigation (Bootstrap 5) -->
        <div class="d-flex" id="wrapper">
            <!-- Sidebar -->
            <nav id="sidebar" class="bg-dark sidebar">
                <div class="sidebar-header">
                    <button id="close-sidebar-btn" class="btn btn-light d-md-none">
                        <span class="navbar-toggler-icon"></span> <!-- Close icon -->
                    </button>
                </div>
                <ul class="list-unstyled components">
                    <li>@Html.ActionLink("Admin Dashboard", "Index", "Admin")</li>
                    <li>@Html.ActionLink("Recent Orders", "Orders", "Admin")</li>
                    <li>@Html.ActionLink("Manage Products", "Products", "Admin")</li>
                    <li>@Html.ActionLink("Manage Orders", "Orders", "Admin")</li>
                    <li>@Html.ActionLink("Manage Users", "Users", "Admin")</li>
                </ul>
            </nav>

            <!-- Page Content -->
            <div id="page-content-wrapper">
                <!-- Button to open Sidebar on Mobile -->
                <button id="sidebar-toggle-btn" class="btn d-md-none">
                    <img src="~/Content/images/menu.png" alt="Menu" /> <!-- Menu icon image -->
                </button>

                <!-- Main Dashboard Content -->
                <div class="dashboard-section">
                    <h3>Admin Dashboard</h3>
                    <div class="row g-5">
                        <!-- g-4 thiết lập khoảng cách giữa các box -->
                        <div class="col-12 col-md-4">
                            <div class="stat-box">
                                <h3>Total Sales</h3>
                                <p>@Model.TotalSales.ToString("C")</p>  <!-- Hiển thị tổng doanh thu -->
                            </div>
                        </div>
                        <div class="col-12 col-md-4">
                            <div class="stat-box">
                                <h3>Products</h3>
                                <p>@Model.ProductCount</p>  <!-- Hiển thị số lượng sản phẩm -->
                            </div>
                        </div>
                        <div class="col-12 col-md-4">
                            <div class="stat-box">
                                <h3>Users</h3>
                                <p>@Model.UserCount</p>  <!-- Hiển thị số lượng người dùng -->
                            </div>
                        </div>

                        <div class="dashboard-section">
                            <h3>Recent Orders</h3>
                            <table class="table">
                                <tr>
                                    <th>Order ID</th>
                                    <th>Date</th>
                                    <th>Total</th>
                                    <th>User</th>
                                </tr>
                                @foreach (var order in Model.RecentOrders)
                                {
                                    <tr>
                                        <td>@order.OrderId</td>
                                        <td>@order.OrderDate.ToShortDateString()</td>
                                        <td>@order.TotalPrice.ToString("C")</td>
                                        <td>@order.User.Username</td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>


    <script>
        // JavaScript to toggle the sidebar visibility on mobile
        document.getElementById("sidebar-toggle-btn").addEventListener("click", function () {
            var sidebar = document.getElementById("sidebar");
            sidebar.classList.toggle("active"); // Toggle the sidebar visibility

            // Adjust the padding for the content
            var content = document.querySelector("#page-content-wrapper");
            content.style.paddingLeft = sidebar.classList.contains("active") ? "250px" : "10px";

            // Move the button to the bottom left when sidebar is active
            var toggleBtn = document.getElementById("sidebar-toggle-btn");
            toggleBtn.style.left = sidebar.classList.contains("active") ? "20px" : "10px";
            toggleBtn.style.bottom = sidebar.classList.contains("active") ? "20px" : "10px"; // Move it to the bottom
        });

        // JavaScript to close sidebar
        document.getElementById("close-sidebar-btn").addEventListener("click", function () {
            var sidebar = document.getElementById("sidebar");
            sidebar.classList.remove("active"); // Remove the active class to hide sidebar

            // Reset padding-left for main content
            var content = document.querySelector("#page-content-wrapper");
            content.style.paddingLeft = "0";

            // Move the button back to top left when sidebar is closed
            var toggleBtn = document.getElementById("sidebar-toggle-btn");
            toggleBtn.style.left = "20px";
            toggleBtn.style.bottom = "0"; // Reset position
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
