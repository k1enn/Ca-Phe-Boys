@model CoffeeShopApp.Models.AdminDashboardViewModel

<h2>Admin Dashboard</h2>

<div class="dashboard-stats">
    <div class="stat-box">
        <h3>Total Sales</h3>
        <p>@Model.TotalSales.ToString("C")</p>
    </div>
    <div class="stat-box">
        <h3>Products</h3>
        <p>@Model.ProductCount</p>
    </div>
    <div class="stat-box">
        <h3>Users</h3>
        <p>@Model.UserCount</p>
    </div>
</div>

<div class="dashboard-section">
    <h3>Recent Orders</h3>
    <table class="table">
        <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Total</th>
            <th>User</th>
        </tr>
        @foreach (var order in Model.RecentOrders)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.TotalPrice.ToString("C")</td>
                <td>@order.User.Username</td>
            </tr>
        }
    </table>
</div>

<div class="dashboard-links">
    <h3>Quick Links</h3>
    <ul>
        <li>@Html.ActionLink("Manage Products", "Products", "Admin")</li>
        <li>@Html.ActionLink("Manage Orders", "Orders", "Admin")</li>
        <li>@Html.ActionLink("Manage Users", "Users", "Admin")</li>
    </ul>
</div>

<style>
    .dashboard-stats {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

    .stat-box {
        background-color: #f8f9fa;
        padding: 15px;
        text-align: center;
        flex: 1;
        border-radius: 8px;
    }

    .dashboard-section {
        margin-top: 20px;
    }

    .dashboard-links ul {
        list-style: none;
        padding: 0;
    }

    .dashboard-links li {
        margin: 5px 0;
    }
</style>
