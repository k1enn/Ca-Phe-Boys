<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Boys Coffee</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="~/Content/images/logo.png" />

    <!-- Styles -->
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/navbar.css" />


    <!-- Scripts -->
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Điều chỉnh header với fixed-top để navbar luôn hiển thị khi cuộn -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">

        <div class="container-fluid">
            <!-- Brand/logo -->
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/Content/images/logo.png" height="35" alt="Logo" style="width: 40px;">
            </a>

            <!-- Toggler for mobile view -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <!-- Links sẽ hiển thị dựa trên vai trò người dùng từ Session -->
                    @if (Session["Role"] == null)
                    {

                        <li class="nav-item">
                            <nav class="navigation">
                                @Html.ActionLink("Thực đơn", "Menu", "Home", null, new { @class = "nav-link" })
                            </nav>
                        </li>
                        <li class="nav-item">
                            <nav class="navigation">
                                @Html.ActionLink("Về chúng tôi", "About", "Home", null, new { @class = "nav-link" })
                            </nav>
                        </li>
                        <li class="nav-item">
                            <nav class="navigation">
                                @Html.ActionLink("Mua ngay", "Shopping", "Home", null, new { @class = "nav-link" })
                            </nav>
                        </li>
                        <li class="nav-item">
                            <nav class="navigation">
                                @Html.ActionLink("Đăng nhập", "Login", "Account", null, new { @class = "nav-link" })
                            </nav>
                        </li>

                    }
                    else if (Session["Role"].ToString() == "Customer")
                    {
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Home")">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <nav class="navigation">
                                @Html.ActionLink("Thực đơn", "Menu", "Home", null, new { @class = "nav-link" })
                            </nav>
                        </li>
                        <li class="nav-item">
                            <nav class="navigation">
                                @Html.ActionLink("Về chúng tôi", "About", "Home", null, new { @class = "nav-link" })
                            </nav>
                        </li>
                        <li class="nav-item">
                            <nav class="navigation">
                                @Html.ActionLink("Mua ngay", "Shopping", "Home", null, new { @class = "nav-link" })
                            </nav>
                        </li>
                        <li class="nav-item">
                            <nav class="navigation">
                                @Html.ActionLink("Đăng xuất", "Logout", "Account", null, new { @class = "nav-link" })
                            </nav>
                        </li>
                    }
                    else if (Session["Role"].ToString() == "Admin")
                    {
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Home")">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <nav class="navigation">
                                @Html.ActionLink("Sản phẩm", "Index", "Product", null, new { @class = "nav-link" })
                            </nav>
                        </li>
                        <li class="nav-item">
                            <nav class="navigation">
                                @Html.ActionLink("Về chúng tôi", "About", "Home", null, new { @class = "nav-link" })
                            </nav>
                        </li>
                        <li class="nav-item">
                            <nav class="navigation">
                                @Html.ActionLink("Mua ngay", "Shopping", "Home", null, new { @class = "nav-link" })
                            </nav>
                        </li>
                    }
                </ul>

                <!-- Search box -->
                <form class="d-flex ms-auto" autocomplete="off" action="/action_page.php">
                    <div class="input-group">
                        <input id="input" style="height:40px" type="text" name="myDrink" placeholder="Tìm kiếm sản phẩm" class="form-control" aria-label="Search">
                        <button class="btn btn-primary" type="submit">
                            <img src="~/Content/images/search-icon.png" height="25" width="25" /> <!-- Search box  chỉnh sửa cho bnt bằng với ô input-->
                        </button>
                    </div>
                </form>


            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid body-content">
        @RenderBody()
    </div>

    <!-- Search bar autocomplete -->
    <script src="~/Scripts/autocomplete-search.js"></script>
    <!-- jQuery & Bootstrap Scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
